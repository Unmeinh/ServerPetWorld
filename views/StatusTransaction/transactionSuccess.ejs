<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thành công</title>
    <style>
        @font-face {
            font-family: myFirstFont;
            src: url(/stylesheets/ProductSans.otf);
        }

        body {
            width: 100%;
            height: 100%;
            background-color: #FEF6E4;
            margin: 0;
            padding: 0;
        }

        .container {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <img src="/upload/icon_transaction.png" alt="" width="50%">
        <p id="countdown" class="countdown" style="font-family: myFirstFont; font-size: 21px; color: #001858;">Bạn sẽ
            quay trở lại màn
            hình
            trong vòng 3
            giây...</p>
    </div>

    <script>
        let seconds = 3;
        const countdownElement = document.getElementById('countdown');

        function countdown() {
            countdownElement.textContent = `Bạn sẽ quay trở lại màn hình trong ${seconds} giây...`;
            if (seconds > 0) {
                seconds--;
                setTimeout(countdown, 1000);
            } else {
                console.log("hết time")
            }
        }

        window.onload = countdown;
    </script>
</body>

</html>