<%- include('../inc/top',{title:'Thêm admin mới'}) %>
    <div class="container mt-2">

        <div class="form-group row m-2">
            <label for="nameAdmin" class="col-sm-5 col-form-label" style="color: #848485;">Tạo một người dùng mới và
                thêm
                vào trang mạng này.
            </label>
            <div class="col-sm-5">
            </div>
        </div>
        <% if(msg) { %>
            <div class="row">
                <span class="p-3"
                    style="background-color: rgb(175, 214, 239); border-radius: 10px;color: red;font-weight: bold;">
                    <%= msg %>
                </span>
            </div>
            <% }%>


                <form method="post">
                    <div class="form-group row  m-2">
                        <label for="nameAdmin" form="bold" class="col-sm-3 col-form-label">Tên admin(bắt buộc)</label>
                        <div class="col-sm-5">
                            <input name="fullName" type="text" class="form-control" id="nameAdmin" required>
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label for="usernameAdmin" class="col-sm-3 col-form-label">Tên đăng nhập</label>
                        <div class="col-sm-5">
                            <input name="userName" type="text" class="form-control" id="usernameAdmin">
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label for="emailAdmin" class="col-sm-3 col-form-label">Email</label>
                        <div class="col-sm-5">
                            <input name="email" type="email" class="form-control" id="emailAdmin">
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label for="password" class="col-sm-3 col-form-label">Mật khẩu</label>
                        <div class="col-sm-5">
                            <input name="passWord" type="password" class="form-control " id="password">
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label for="re-password" class="col-sm-3 col-form-label">Nhập lại mật khẩu</label>
                        <div class="col-sm-5">
                            <input name="re_passWord" type="password" class="form-control " id="re-password">
                        </div>
                    </div>
