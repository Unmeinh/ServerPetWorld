<%- include('../inc/top',{title:'Sửa thể loại sản phẩm'}) %>

  <div class="container" >
      
    <div class="form-group row mb-3 mt-3">
      <label for="username" class="col-sm-5 ">Sửa thể loại sản phẩm và cập nhật vào trang mạng này.</label>
    </div>

    <% if(msg) { %>
      <div class="row">
          <span class="p-3"
              style="background-color: rgb(175, 214, 239); border-radius: 10px;color: red;font-weight: bold;">
              <%= msg %>
          </span>
      </div>
      <% }%>

    <form action="" method="post">
        <div class="form-group row mt-3">
          <label for="" class="col-sm-3 col-form-label">Tên thể loại</label>
          <div class="col-sm-4">
            <input type="text" name="tentheloai" class="form-control " id="tentheloai"  placeholder="Nhập tên thể loại" value="<%= Objdata.nameCategory%>" >
          </div>
        </div>

        <div class="form-group row mt-2">
          <label for="tenicon" class="col-sm-3 col-form-label">Tên Icon</label>
          <div class="col-sm-4">
            <input type="text" name="tenicon" class="form-control " id="tenicon" placeholder="Nhập tên Icon"  value="<%= Objdata.nameIcon%>">
          </div>
        </div>  

      <div class="form-group row  mt-3">
        <div class="col-sm-10">
          <button style="background-color: #F582AE;"  type="submit"  class="btn btn-secondary ">Sửa thể loại mới </button>
          <a href="/category-product" class="btn" style="background-color: rgb(216, 212, 212);font-weight: bold;margin: 20px;">Hủy bỏ</a>
        </div>
      </div>
    </form>
    
  </div>
  
<%- include('../inc/bottom') %>
