<%- include('../inc/top',{title:'Thêm người dùng shop mới'}) %>

    <div class="container mt-2">

        <div class="form-group row">
            <label for="username" class="col-sm-5 ">Tạo một người dùng shop mới và thêm vào trang mạng này.</label>
        </div>

        <% if (msg) { %>
            <div class="alert alert-danger"
                style="background-color: rgb(175, 214, 239); border-radius: 10px;color: red;font-weight: bold;">
                <%= msg %>
            </div>
            <% } %>

                <form action="" method="post" enctype="multipart/form-data">
                    <div class="form-group row m-2">
                        <label for="phone" class="col-sm-3 col-form-label">Tên đầy đủ</label>
                        <div class="col-sm-4">
                            <input type="tel" name="tendaydu" class="form-control" id="tendaydu"
                                placeholder="Nhập tên đầy đủ">
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label class="col-sm-3 col-form-label">Email</label>
                        <div class="col-sm-4">
                            <input type="text" name="email" class="form-control" id="email"
                                placeholder="Nhập email của bạn">
                        </div>
                    </div>
                    <div class="form-group row  m-2">
                        <label for="phone" class="col-sm-3 col-form-label">Tên đăng nhập</label>
                        <div class="col-sm-4">
                            <input name="tendangnhap" class="form-control" placeholder="Nhập tên đăng nhập">
                        </div>
                    </div>

                    <div class="form-group row  m-2">
                        <label for="password" class="col-sm-3 col-form-label">Mật khẩu</label>
                        <div class="col-sm-4">
                            <input type="password" name="matkhau" class="form-control " id="password"
                                placeholder="Nhập mật khẩu">
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label for="password" class="col-sm-3 col-form-label">Nhập lại mật khẩu</label>
                        <div class="col-sm-4">
                            <input type="password" name="confirmmatkhau" class="form-control " id="confirm_password"
                                placeholder="Nhập lại mật khẩu">
                        </div>
                    </div>

                    <div class="form-group row m-2">
                        <label class="col-sm-3 col-form-label">Ảnh</label>
                        <div class="col-sm-4">
                            <input type="file" name="anh_usershop" class="form-control">
                        </div>
                    </div>
                    <!-- <div class="form-group row m-2">
                        <label for="username" class="col-sm-3 col-form-label">Gửi thông báo đến người dùng</label>
                        <div class="col-sm-9">
                            <input class="form-check-input" type="checkbox" value="" id="checkbox"
                                style="margin-left: 1px;">
                            <label style="margin-left: 20px; color: #001858;"> Gửi cho thành viên mới đăng ký chứa email
                                chứa thông tin tài khoản của họ</label>
                            </label>
                        </div>
                    </div> -->

                    <div class="form-group row  m-2">
                        <div class="col-sm-10">
                            <button style="background-color: #F582AE;" type="submit" class="btn btn-secondary ">Thêm usershop </button>
                            <a href="http://localhost:3000/user-shop" style=" background-color: #001858" class="btn btn-secondary">Hủy
                                bỏ</a>
                        </div>
                    </div>
                </form>

    </div>
    <%- include('../inc/bottom') %>