<%- include('../inc/top',{title:'Chi tiết Người dùng Shop '}) %>

    <div class="container mt-2">

        <div class="form-group row m-2">
            <label for="usernameShopUS" class="col-sm-5 col-form-label" style="color: #848485;">Trang này để xem chi tiết tài
                khoản </label>
                <div class="col-sm-5">
        </div>
    </div>
    <form action="http://localhost:3000/user-shop" method="get">
        <!-- Các trường người dùng và giới tính ở đây -->
        <!-- Tên người dùng -->

        <div class="form-group row m-2" style="align-items: center;">
            <label for="username" form="bold" class="col-sm-3 col-form-label">Avatar</label>
            <div class="col-sm-5 ">
                <% if(typeof(objUS.avatarShopUS )!='undefined') { %>
                    <img src="<%= objUS.avatarShopUS %>" style="width: 100px;height: 100px;" class="img-fluid">
                    <% } else { %>
                        <img src="http://localhost:3000/upload/avatar_null.png" style="width: 100px;height: 100px;" class="img-fluid">
                        <%  }%>
                        
            </div>
        </div>

        <div class="form-group row m-2">
            <label for="username" form="bold" class="col-sm-3 col-form-label">Tên Đầy đủ</label>
            <div class="col-sm-4">
                <label type="text" class="form-control" id="username">
                    <%= objUS.fullname%>
                </label>
            </div>
        </div>

        <div class="form-group row m-2">
            <label for="username" form="bold" class="col-sm-3 col-form-label">Tên đăng nhập</label>
            <div class="col-sm-4">
                <label type="text" class="form-control" id="username">
                    <%= objUS.usernameShopUS%>
                </label>
            </div>
        </div>
        <!-- Địa chỉ -->
        <div class="form-group row m-2">
            <label class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-4">
                <label type="text" class="form-control" id="diachi">
                    <%= objUS.emailShop%>
                </label>
            </div>
        </div>
        <!-- Số điện thoại -->
        <div class="form-group row m-2">
            <label for="phone" class="col-sm-3 col-form-label">Trạng thái quản trị</label>
            <div class="col-sm-4">
                <label type="text" class="form-control" id="sdt">Admin</label>
            </div>
        </div>
        <div class="form-group row m-2">
            <div class="col-sm-10">
                <button style="background-color: #F582AE;" type="submit" class="btn btn-secondary ">Quay lại</button>
            </div>
        </div>
    </form>

    </div>

    <%- include('../inc/bottom') %>