<%- include('../inc/top',{title:'Chi tiết người dùng Shop'}) %>

    <div class="container mt-2">

        <div class="form-group row m-2">
            <label for="usernameShopUS" class="col-sm-5 col-form-label" style="color: #848485;">Trang này để xem chi
                tiết tài
                khoản user shop </label>
            <div class="col-sm-5">
            </div>
        </div>
        <form action="/user-shop" method="get">

            <div class="form-group row m-2" style="align-items: center;">
                <label for="username" form="bold" class="col-sm-3 col-form-label">Avatar</label>
                <div class="col-sm-5" style="margin-left: 110px;">
                    <div class="avatar-name">
                        <span class="avatar-initial">
                            <%= objUS.fullName.charAt(0).toUpperCase() %>
                        </span>
                    </div>
                    <% if (typeof(objUS.avatarUserShop) !== 'undefined') { %>
                        <img src="<%= objUS.avatarUserShop %>" style="width: 100px; height: 100px; border-radius: 50px;"
                            class="img-fluid">
                    <% } else if (typeof(objUS.fullName) !== 'undefined') { %>
                        <img src="<%= objUS.avatarUserShop %>" style="width: 100px; height: 100px; border-radius: 50%;" class="img-fluid">
                    <% }  %>

                </div>
            </div>

            <div class="form-group row m-2">
                <label for="username" form="bold" class="col-sm-3 col-form-label">Họ tên</label>
                <div class="col-sm-4">
                    <% if(typeof(objUS.fullName)!='undefined' ) { %>
                        <label type="text" class="form-control">
                            <%= objUS.fullName %>
                        </label>

                        <%} else { %>
                            <label type="text" class="form-control">
                              Không có dữ liệu
                            </label>
                            <% } %>

                </div>
            </div>

            <div class="form-group row m-2">
                <label for="username" form="bold" class="col-sm-3 col-form-label">Tên đăng nhập</label>
                
                    <div class="col-sm-4">
                        <% if(typeof(objUS.userName)!='undefined' ) { %>
                            <label type="text" class="form-control">
                                <%= objUS.userName %>
                            </label>
    
                            <%} else { %>
                                <label type="text" class="form-control">
                                  Không có dữ liệu
                                </label>
                                <% } %>
                    
                </div>
            </div>

            <div class="form-group row m-2">
                <label class="col-sm-3 col-form-label">Email</label>
                <div class="col-sm-4">
                    <% if(typeof(objUS.email)!='undefined' ) { %>
                        <label type="text" class="form-control">
                            <%= objUS.email %>
                        </label>

                        <%} else { %>
                            <label type="text" class="form-control">
                              Không có dữ liệu
                            </label>
                            <% } %>
                </div>
            </div>

            <div class="form-group row m-2">
                <label class="col-sm-3 col-form-label">Địa chỉ</label>
                <div class="col-sm-4">
                    <% if(typeof(objUS.location)!='undefined' ) { %>
                        <label type="text" class="form-control">
                            <%= objUS.location %>
                        </label>

                        <%} else { %>
                            <label type="text" class="form-control">
                              Không có dữ liệu
                            </label>
                            <% } %>

                </div>
            </div>

            <div class="form-group row m-2">
                <label class="col-sm-3 col-form-label">Ngày tạo</label>
                <div class="col-sm-4">
                    <% if(typeof(objUS.createdAt) !== 'undefined') { %>
                        <label type="text" class="form-control">
                            <%= moment(objUS.createdAt).format('DD/MM/YYYY hh:mm:ss a') %>
                        </label>
                    <% } else { %>
                        <label type="text" class="form-control">
                            Không có dữ liệu
                        </label>
                    <% } %>
                </div>
            </div>
            
            <div class="form-group row m-2">
                <label class="col-sm-3 col-form-label">Số lượng shop</label>
                <div class="col-sm-4">
                    <% if(typeof(objUS.arr_Shop) !== 'undefined') { %>
                        <label type="text" class="form-control">
                            <%= objUS.arr_Shop.length %>
                        </label>
                    <% } else { %>
                        <label type="text" class="form-control">
                            Không có dữ liệu
                        </label>
                    <% } %>
                </div>
            </div>

            <div class="form-group row m-2">
                <div class="col-sm-10">
                    <button style="background-color: #F582AE;" type="submit" class="btn btn-secondary ">Quay
                        lại</button>
                </div>
            </div>
            
        </form>

    </div>
    <style>
        .avatar-name {
            display: flex;
            align-items: center;
        }
    
        .avatar-initial {
            background-color: #F582AE;
            color: white;
            width: 100px;
            height: 100px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 36px;
        }
        
    </style>
    <%- include('../inc/bottom') %>//
