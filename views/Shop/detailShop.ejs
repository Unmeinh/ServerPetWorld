<%- include('../inc/top',{title:'Chi tiết Shop'}) %>

    <div class="container mt-2">

        <div class="form-group row m-2">
            <label for="nameAdmin" class="col-sm-5 col-form-label" style="color: #848485;">Trang này để xem chi tiết Shop </label>
                <div class="col-sm-5">
        </div>
    </div>
    <form action="http://localhost:3000/Shop" method="get">
        
        <div class="form-group row m-3" style="align-items: center;">
            <label for="username" form="bold" class="col-sm-2 col-form-label">Avatar</label>
            <div class="col-sm-5">
                <% if (typeof(ObjShop.avatarShop) !== 'undefined' && ObjShop.avatarShop.length > 0) { %>
                    <% ObjShop.avatarShop.forEach((image) => { %>
                        <img src="<%= image %>" style="width: 100px; height: 100px;" class="img-fluid">
                    <% }); %>
                <% } else { %>
                    <p>No images available.</p>
                <% } %>
            </div>
        </div>

        <div class="form-group row m-3">
            <label for="username" form="bold" class="col-sm-2 col-form-label">Tên Shop</label>
            <div class="col-sm-3">
                <label type="text" class="form-control"  style="width: 200px;"  >
                    <%= ObjShop.nameShop%>
                </label>
            </div>

                <label for="username" form="bold" class="col-sm-2 col-form-label">Email Shop</label>
                <div class="col-sm-3">
                    <label type="text" style="width: 200px;" class="form-control">
                        <%= ObjShop.emailShop%>
                    </label>
                </div>

        </div>

        <div class="form-group row m-3">
            <label for="username" form="bold" class="col-sm-2 col-form-label">Địa chỉ Shop</label>
            <div class="col-sm-3">
                <label type="text" class="form-control"  style="width: 200px;"  >
                    <%= ObjShop.locationShop%>
                </label>
            </div>

                <label for="username" form="bold" class="col-sm-2 col-form-label">followers</label>
                <div class="col-sm-3">
                    <label type="text" style="width: 200px;" class="form-control">
                        <%= ObjShop.followers%>
                    </label>
                </div>

        </div>
        <div class="form-group row m-3">
            <label for="username" form="bold" class="col-sm-2 col-form-label">Số điện thoại</label>
            <div class="col-sm-3">
                <label type="text" class="form-control"  style="width: 200px;"  >
                    <%= ObjShop.hotlineShop%>
                </label>
            </div>

                <label for="username" form="bold" class="col-sm-2 col-form-label">Doanh thu</label>
                <div class="col-sm-3">
                    <label type="text" style="width: 200px;" class="form-control">
                        <%= ObjShop.revenue%>
                    </label>
                </div>

        </div>
        <div class="form-group row m-3">
            <label for="username" form="bold" class="col-sm-2 col-form-label">Trạng thái Shop</label>
            <div class="col-sm-3">
                <label type="text" class="form-control"  style="width: 200px;"  >
                    <%= ObjShop.statusShop%>
                </label>
            </div>

                <label for="username" form="bold" class="col-sm-2 col-form-label">Chi tiết Shop</label>
                <div class="col-sm-3">
                    <label type="text" style="width: 200px;" class="form-control">
                        <%= ObjShop.descriptionShop %>
                    </label>
                </div>

        </div>

        <div class="form-group row m-3">
            <label for="username" form="bold" class="col-sm-2 col-form-label">Tên người dùng Shop</label>
        <div class="col-sm-3">

            <% if(typeof( ObjShop.idUserShop)!='undefined' ){%>
                <label type="text" class="form-control" style="width: 200px;">
                    <%= ObjShop.idUserShop.userName %>
                </label>
                <%} else {%>

                    <label type="text" class="form-control" style="width: 200px;">
                        Không có người dùng shop 
                    </label>
                    <%}%>
        </div>

        </div>


      
       


        </div>
        <div class="form-group row m-2">
            <div class="col-sm-10">
                <button style="background-color: #F582AE;" type="submit" class="btn btn-secondary ">Quay lại</button>
            </div>
        </div>
    </form>

    </div>

    <%- include('../inc/bottom') %>