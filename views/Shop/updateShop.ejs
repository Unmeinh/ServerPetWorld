<%- include('../inc/top', { title: 'Duyệt shop' }) %>
<div class="container">
    <% if(message) { %>
        <div class="row mb-2">
            <span class="p-3 alert alert-warning">
                <%= message %>
            </span>
        </div>
    <% } %>

    <div class="col-5 m-auto card">
        <form action="" class="card-body" method="post">
            <h5 class="card-text  mb-3">
                Bạn có chắc muốn duyệt shop
                <% if(ObjShop.nameShop < 50) { %>
                    <span style="font-weight: bold">
                        <%= ObjShop.nameShop %>
                    </span> ?
                    <% } else { %>
                        <span style="font-weight: bold">
                            <%= ObjShop.nameShop.slice(0,50) %>...
                        </span> ?
            </h5>
            <%}%>
                </h5>
                <button class="btn btn-danger" type="submit">Duyệt ngay</button>
                <a href="/shop/confirm" class="btn" style="background-color: #d2d2d2;">Hủy bỏ</a>
        </form>
    </div>
</div>
<%- include('../inc/bottom') %>
