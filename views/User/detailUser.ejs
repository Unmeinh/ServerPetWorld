<%- include('../inc/top',{title:'Chi tiết người dùng'}) %>
<div class="ms-5 mt-2">
    <div class="form-group row m-7">
        <label class="col-sm-5 col-form-label" style="color: #848485;">Thông tin chi tiết của người dùng
        </label>
        <div class="col-sm-5">
        </div>
    </div>
    <div class="row mt-4 ">
        <div class="col-md-6">
            <!-- Cột 1 -->
            <form >
              <div class="form-group row p-3 " >
                <label for="username" form="bold" class="col-sm-3 me-auto col-form-label">Tên người dùng</label>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="username" value="<%=objUser.usernameUser%>"  readonly>
                    
                </div>
            </div>
            <div class="form-group row p-3" >
              <label for="name" form="bold" class="col-sm-3 me-auto col-form-label">Họ và tên</label>
              <div class="col-sm-7">
                  <input type="text" class="form-control" id="fullname" value="<%=objUser.fullname%>" readonly>
              </div>
          </div>
          <div class="form-group row p-3 ">
            <label for="birthday" class="col-sm-3 me-auto col-form-label">Ngày sinh</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="birthday"  value="<%=objUser.birthdayUser%>" readonly>
            </div>
        </div>
        <div class="form-group row p-3 ">
          <label for="address" class="col-sm-3 me-auto col-form-label">Địa chỉ</label>
          <div class="col-sm-7">
              <input type="text" class="form-control" id="address" value="<%=objUser.locationUser%>" readonly>
          </div>
      </div>
      <div class="form-group row p-3">
        <label for="gender" class="col-sm-3 me-auto col-form-label">Giới tính</label>
        <div class="col-sm-7">
            <input type="text" class="form-control" id="gender" value="<%=objUser.genderUser%>" readonly>
        </div>
    </div>
    <div class="form-group row p-3">
      <label for="email" class="col-sm-3 me-auto col-form-label">Email</label>
      <div class="col-sm-7">
          <input type="email" class="form-control" id="email" value="<%=objUser.emailUser%>" readonly>
      </div>
  </div>
            <div class="form-group row p-3">
                <label for="phone" class="col-sm-3 me-auto col-form-label">Số điện thoại</label>
                <div class="col-sm-7">
                    <input type="tel" class="form-control" id="phone" value="<%=objUser.phoneNumber%>" readonly>
                </div>
            </div>

            </form>
        </div>
        <div class="col-md-6">
            <!-- Cột 2 -->
            <form>
              <div class="form-group row p-3">
                <label for="followe" form="bold" class="col-sm-3 col-form-label">Người theo dõi</label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="follower" value="<%=objUser.followers%>" readonly>
                </div>
            </div>
            <div class="form-group row p-3" >
              <label for="following" form="bold" class="col-sm-3 col-form-label">Đang theo dõi</label>
              <div class="col-sm-3">
                  <input type="text" class="form-control" id="following" value="<%=objUser.following%>" readonly>
              </div>
          </div>
          <div class="form-group row p-3" >
            <label for="mypet" form="bold" class="col-sm-3 col-form-label">Mypet</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" id="following" value="<%=objUser.myPet%>" readonly>
            </div>
        </div>
        <div class="form-group row p-3" >
          <label for="nickname" form="bold" class="col-sm-3  col-form-label">Nickname</label>
          <div class="col-sm-3">
              <input type="text" class="form-control" id="nickname" value="<%=objUser.nicknameUser%>" readonly>
          </div>
      </div>
            </form>
        </div>
    </div>
    <!-- ... -->
    <div class="form-group row mt-5">
            <div class="col-sm-5">
                <button style="background-color: #F582AE; color: white;" type="submit" class="btn btn-lg ">Quay lại</button>

            </div>
        </div>
</div>
<%- include('../inc/bottom') %>