<%- include('../inc/top',{title:'Cập nhật thông tin người dùng'}) %>
    <div class="container mt-2">

        <div class="form-group row m-2">
            <label for="username" class="col-sm-5 col-form-label" style="color: #848485;">Thông tin chi tiết của người dùng
            </label>
            <div class="col-sm-5">
            </div>
        </div>
        <form>
            <div class="form-group row m-2" style="display: flex;">
                <label for="username" form="bold" class="col-sm-3 col-form-label">Tên người dùng (bắt buộc)</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="username" required>
                </div>
            </div>
            <div class="form-group row  m-2">
                <label for="phone" class="col-sm-3 col-form-label">Số điện thoại</label>
                <div class="col-sm-5">
                    <input type="tel" class="form-control" id="phone">
                </div>
            </div>
            <div class="form-group row  m-2">
                <label class="col-sm-3 col-form-label">Ngày sinh</label>
                <div class="col-sm-5">
                    <div class="row">
                        <div class="col">
                            <select class="form-control" id="day">
                                <!-- Các tùy chọn ngày -->
                                <option value="1">1</option>
                                <option value="2">2</option>
                            </select>
                        </div>
                        <div class="col">
                            <select class="form-control" id="month">
                                <!-- Các tùy chọn tháng -->
                                <option value="1">1</option>
                                <option value="2">2</option>
                            </select>
                        </div>
                        <div class="col">
                            <select class="form-control" id="year">
                                <!-- Các tùy chọn năm -->
                                <option value="1">1</option>
                                <option value="2">2</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row m-2">
                <label for="address" class="col-sm-3 col-form-label">Địa chỉ</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" id="address">
                </div>
            </div>
            <div class="form-group row m-2">
                <label class="col-sm-3 col-form-label">Giới tính</label>
                <div class="col-sm-2">
                    <div class="row">
                        <div class="col">
                            <select class="form-control" id="gioitinh">
                                <!-- Các tùy chọn ngày -->
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                                <option value="Khác">Khác</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <!-- <div class="form-group row m-2">
                <label for="password" class="col-sm-3 col-form-label">Mật khẩu</label>
                <div class="col-sm-5">
                    <input type="password" class="form-control " id="password">
                </div>
            </div> -->
        </form>
        <div class="form-group row m-2 " style="align-items: center;">
            <label for="username" class="col-sm-3 col-form-label">Gửi thông báo đến người dùng</label>
            <div class="col-sm-8">
                <input class="form-check-input" type="checkbox" value="" id="checkbox" style="margin-left: 1px;">
                <label style="margin-left: 20px; color: #001858;"> Gửi cho thành viên được cập nhật thông tin</label>
                </label>
            </div>
        </div>
        <div class="form-group row m-2">
            <div class="col-sm-10">
                <button style="background-color: #F582AE;" type="submit" class="btn btn-secondary ">Cập nhật thông tin người dùng</button>

            </div>
        </div>
    </div>

