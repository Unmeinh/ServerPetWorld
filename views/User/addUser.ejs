<%- include('../inc/top',{title:'Thêm người dùng mới',adminLogin: adminLogin}) %>
    <div class="container mt-2">
        <div class="form-group row m-2">
            <label for="username" class="col-sm-5 col-form-label" style="color: #848485;">Tạo một người dùng mới và thêm
                vào trang mạng này.
            </label>
            <div class="col-sm-5">
            </div>
        </div>
        <% if (msg) { %>
            <div class="alert alert-danger" style="background-color: rgb(175, 214, 239); border-radius: 10px;color: red;font-weight: bold;">
                <%= msg %>
            </div>
            <% } %>
                <form action=" " method="post">
                    <div class="form-group row m-2">
                        <label for="username" class="col-sm-3 col-form-label">Tên đăng nhập (bắt buộc)</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" id="username" name="userName">
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label for="fullname" class="col-sm-3 col-form-label">Họ và tên</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" name="fullName" required>
                        </div>
                    </div>
                    <div class="form-group row  m-2">
                        <label for="phone" class="col-sm-3 col-form-label">Số điện thoại</label>
                        <div class="col-sm-5">
                            <input type="number" class="form-control" name="phoneNumber">
                        </div>
                    </div>
                    <div class="form-group row  m-2">
                        <label for="phone" class="col-sm-3 col-form-label">Email</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" name="email">
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label class="col-sm-3 col-form-label">Ngày sinh</label>
                        <div class="col-sm-5">
                            <div class="row">
                                <div class="col">
                                    <input type="date" class="form-control" id="birthdayUser" name="birthday" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <label for="message-text" class="col-sm-3 col-form-label">Địa chỉ</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" name="locationUser" required>
                        </div>
                    </div>

                    <div class="form-group row m-2">
                        <label for="password" class="col-sm-3 col-form-label">Mật khẩu</label>
                        <div class="col-sm-5">
                            <input type="password" class="form-control " name="passWord" required>
                        </div>
                    </div>
                    <div class="form-group row m-2 " style="align-items: center;">
                        <label for="username" class="col-sm-3 col-form-label">Gửi thông báo đến người dùng</label>
                        <div class="col-sm-8">
                            <input class="form-check-input" type="checkbox" value="" id="checkbox"
                                style="margin-left: 1px;">
                            <label style="margin-left: 20px; color: #001858;"> Gửi cho thành viên mới đăng ký chứa email
                                chứa thông
                                tin tài khoản của họ</label>
                        </div>
                    </div>
                    <div class="form-group row m-2">
                        <div class="col-sm-10">
                            <button style="background-color: #F582AE;" type="submit" class="btn btn-secondary ">Thêm
                                người dùng mới</button>
                            <a href="/user" style=" background-color: #001858"
                                class="btn btn-secondary">Hủy bỏ</a>
                        </div>
                    </div>
                </form>
    </div>

    <%- include('../inc/bottom') %>